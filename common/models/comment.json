{
  "name": "comment",
  "plural": "comments",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "AddPeerRelation": {
      "relationName": [
        "replies"
      ]
    },
    "TimeStamp" : {
      "createdAt" : "createdAt",
      "updatedAt" : "updatedAt",
      "required" : false
    }
  },
  "properties": {
    "description": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "replies": {
      "type": "hasMany",
      "model": "reply",
      "foreignKey": "sourceId",
      "through": "comment_has_reply",
      "keyThrough": "targetId"
    },
    "peer": {
      "type": "hasMany",
      "model": "peer",
      "foreignKey": "sourceId",
      "through": "comment_has_commentor",
      "keyThrough": "targetId"
    },
    "collections": {
      "type": "hasMany",
      "model": "collection",
      "foreignKey": "targetId",
      "through": "collection_has_comment",
      "keyThrough": "sourceId"
    },
    "contents": {
      "type": "hasMany",
      "model": "content",
      "foreignKey": "targetId",
      "through": "content_has_comment",
      "keyThrough": "sourceId"
    }
  },
  "acls": [],
  "methods": {}
}
